<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <android.support.v7.widget.CardView
        android:id="@+id/product_list_card_view"
        android:focusable="false"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="visible"
                android:layout_gravity="center"/>

            <ImageView
                android:padding="5dp"
                android:id="@+id/product_list_listitem_imageView"
                android:layout_width="300dp"
                android:layout_height="410dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:focusableInTouchMode="false"
                android:src="@drawable/testing"
                />
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false">


                <TextView
                    android:id="@+id/product_list_listitem_textView_title"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/raleway"
                    android:focusable="false"
                    android:textAlignment="center"
                    android:focusableInTouchMode="false"
                    android:textSize="28sp"
                    android:textColor="@color/colorBlack"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/product_list_listitem_textView_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/open_sans"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:focusable="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusableInTouchMode="false"
                    android:textSize="28sp"
                    android:text="Price" />

                <Button
                    android:id="@+id/product_list_listitem_btn_add_to_cart"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_confirm"
                    android:text="Add to cart"
                    android:textSize="22sp"
                    android:fontFamily="@font/raleway"
                    android:layout_margin="15dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="200dp"
                    android:layout_height="55dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>